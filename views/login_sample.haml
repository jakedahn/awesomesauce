    %div#wrapper 
      #header
        %h1
          %a{:href => "#"} AwesomeSauce
        #login.large-rounded.show
          %form{"accept-charset" => "utf-8", :action => "login", :method => "post"}
            %fieldset
              %label{:for => "username"} Username
              %input#username.small-rounded{:name => "username", :type => "text", :value => ""}/
              %label{:for => "password"} Password
              %input#password.small-rounded{:name => "password", :type => "text", :value => ""}/
              %input.small-rounded{:type => "submit", :value => "Login"}/
          %ul#alternate_links
            %li
              %a{:href => "#"} Forgot Password?
            %li
              %a{:href => "#"} Register
        #nav
          %ul#main_nav
            %li
              %a{:href => "/"} Dashboard
            %li
              %a.active{:href => "/compute_dashboard"} Compute
            %li
              %a{:href => "/objectstore_dashboard"} Object Store
      %div#content
        #sidebar
          .search
            %form{"accept-charset" => "utf-8", :action => "search", :method => "post"}
